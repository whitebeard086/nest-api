// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int @id @default(autoincrement())
  name                String
  phone               String
  email               String @unique
  password            String
  user_type           UserType
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
  homes               Home[]
  buyer_messages      Message[] @relation("buyer_messages")
  realtor_messages    Message[] @relation("realtor_messages")
}

model Home {
  id                  Int @id @default(autoincrement())
  realtor_id          Int
  price               Float
  address             String
  bedrooms            Int
  bathrooms           Float
  city                String
  land_size           Float
  property_type       PropertyType
  listed_date         DateTime @default(now())
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
  images              Image[]
  realtor             User @relation(fields: [realtor_id], references: [id])
  messages            Message[]
}

model Image {
  id                  Int @id @default(autoincrement())
  home_id             Int
  url                 String
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
  home                Home @relation(fields: [home_id], references: [id])
}

model Message {
  id                  Int @id @default(autoincrement())
  home_id             Int
  buyer_id            Int
  realtor_id          Int
  message             String
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
  home                Home @relation(fields: [home_id], references: [id])
  buyer               User @relation("buyer_messages", fields: [buyer_id], references: [id])
  realtor             User @relation("realtor_messages", fields: [realtor_id], references: [id])
}

enum UserType {
  BUYER
  REALTOR
  ADMIN
}

enum PropertyType {
  RESIDENTIAL
  CONDO
}